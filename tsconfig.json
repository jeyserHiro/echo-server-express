{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": false,
        "rootDir": "./src",
        "outDir": "./build",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "importHelpers": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": ["dom", "es7", "es2017.object"],
        "skipLibCheck": true
    },
    "include": ["src/**/*", "types/*.d.ts"],
    "exclude": ["src/**/*.spec.ts"]
}
